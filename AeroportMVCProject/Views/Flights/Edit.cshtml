@using AeroportWeb.ExtentionMethods
@model AeroportMVCProject.Models.FlightCreateUpdateModel

@{
    ViewBag.Title = "Редактировать";
}

<h2>Редактировать рейс</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center">Рейс</h4>
        <hr />
        <div class="row justify-content-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.FlightId)

            <div class="form-group col-12">
                @Html.LabelFor(model => model.DepartureOrArrival, htmlAttributes: new { @class = "control-label" })
                <div class="checkbox">
                    @Html.EditorFor(model => model.DepartureOrArrival)
                    @Html.ValidationMessageFor(model => model.DepartureOrArrival, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightNum, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FlightNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightNum, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.Flightdate, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Flightdate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Flightdate, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightCity, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FlightCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightCity, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightAirline, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FlightAirline, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightAirline, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightTerminal, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FlightTerminal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightTerminal, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightStat, htmlAttributes: new { @class = "control-label" })

                @Html.EnumDropDownListFor(model => model.FlightStat, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FlightStat, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.FlightGate, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FlightGate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightGate, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.BusinessPrice, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.BusinessPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusinessPrice, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-1 col-sm-6 col-md-4">
                @Html.LabelFor(model => model.EconomPrice, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.EconomPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EconomPrice, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.Button("Сохранить", new { @class = "btn btn-outline-primary", @type = "submit" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index", null, new { @class = "btn btn-outline-primary" })
</div>
